#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir> <env-dir>

set -exuo pipefail

BUILD_DIR=${1:-}
CACHE_DIR=${2:-}
ENV_DIR=${3:-}

cd $BUILD_DIR

#cd service/text2img
#pip3 install -r requirements.txt
#cd -

# save space on slug
rm -rf \
  .DS_Store \
  .git/ \
  .github/ \
  .ruby-lsp/ \
  astro_charts_etc/ \
  cli/ \
  design/ \
  guardrails/ \
  infra/ \
  spikes/ \
  ui/ \

cd saturn
pwd
ls -la
# cd $(bin/bundle show wkhtmltopdf-binary)/bin
cd ~/saturn/vendor/bundle/ruby/*/gems/wkhtmltopdf-binary-*/bin
mv wkhtmltopdf_ubuntu_22.04_amd64.gz /tmp/
rm *.gz
mv /tmp/wkhtmltopdf_ubuntu_22.04_amd64.gz ./

cd "${BUILD_DIR}"
du -sh .
du -sh *

exit 0
