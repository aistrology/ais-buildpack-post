#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir> <env-dir>

set -euo pipefail
set -x

BUILD_DIR=${1}
CACHE_DIR=${2}
ENV_DIR=${3}

cd $BUILD_DIR
pwd

# save space on slug
rm -rf \
  .DS_Store \
  .git/ \
  .github/ \
  .ruby-lsp/ \
  astro_charts_etc/ \
  astrolog/versions/7.60/dev/ \
  cli/ \
  design/ \
  guardrails/ \
  infra/ \
  spikes/ \
  ui/ \

cd saturn
pwd

du -sh .
du -sh * | sort -hr

BIN_DIR="$(cd "$(dirname "$0")" && pwd)"
BUILDPACK_ROOT="$(cd "$BIN_DIR/.." && pwd)"

echo "BIN_DIR: $BIN_DIR"
echo "BUILDPACK_ROOT: $BUILDPACK_ROOT"
echo "BUILD_DIR: $BUILD_DIR"

mkdir -p "$BUILD_DIR/.profile.d"
cp "$BUILDPACK_ROOT/profile.d/set_ephemeris_path.sh" "$BUILD_DIR/.profile.d/"
chmod +x "$BUILD_DIR/.profile.d/set_ephemeris_path.sh"

# If your script also enters a subdirectory (e.g., `cd saturn`), keep that,
# but do not place .profile.d under the subdirectory.

# # cd $(bin/bundle show wkhtmltopdf-binary)/bin
# cd /app/saturn/vendor/bundle/ruby/3.2.0/gems/wkhtmltopdf-binary-0.12.6.8/bin
# mv wkhtmltopdf_ubuntu_22.04_amd64.gz /tmp/
# rm *.gz
# mv /tmp/wkhtmltopdf_ubuntu_22.04_amd64.gz ./

# TODO lock wkhtmltopdf version to ensure compatible with pdfkit
# if [[ $(wkhtmltopdf --version) != *"wkhtmltopdf 0.12.5"* ]]; then
#   echo "wkhtmltopdf version is not 0.12.5"
#   exit 1
# fi

exit 0
